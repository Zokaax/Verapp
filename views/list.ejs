<style>
    .card {
        height: 100%;
        display: flex;
        flex-direction: column;
        border-color: #0001;
    }

    .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
        display: block;
    }

    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        padding: 1rem;
    }

    .card-title {
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 0.9em;
    }

    .product-main-image {
        transition: opacity 0.3s ease-in-out;
    }
</style>

<script>
    // public/js/main.js

    document.addEventListener('DOMContentLoaded', () => {
        const productImages = document.querySelectorAll('.product-main-image');

        productImages.forEach(img => {
            let originalSrc = img.src;
            let otherImages = [];
            let currentImageIndex = 0;
            let hoverInterval;

            try {
                const dataAttr = img.getAttribute('data-other-images');
                if (dataAttr) {
                    otherImages = JSON.parse(dataAttr);
                }
            } catch (e) {
                console.error('Error parsing data-other-images:', e);
                otherImages = [];
            }

            if (otherImages.length === 0) {
                return;
            }

            img.addEventListener('mouseenter', () => {
                currentImageIndex = 0;
                hoverInterval = setInterval(() => {
                    currentImageIndex = (currentImageIndex + 1) % otherImages.length;
                    img.src = otherImages[currentImageIndex];
                }, 500);
            });

            img.addEventListener('mouseleave', () => {
                clearInterval(hoverInterval);
                img.src = originalSrc;
            });
        });
    });
</script>